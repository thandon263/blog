
<h1><%= @article.title %>, <%= @article.author %></h1><%= link_to 'Edit Article', edit_article_path(@article)%>

<p><%= @article.body %></p>

<h4>Add a comment</h4>
<p><%= form_for @article do |t| %></p>
<p><% t.label :comment %></p>
<p><%= t.text_field :comment %></p>
<p>
  <%= t.submit %>
</p>

<% end %>

<%= link_to 'Back', articles_url %>
<%= link_to 'Delete Article', @article, method: :delete, data:{confirm:("Do you want to completely remove this Article?")} %>
